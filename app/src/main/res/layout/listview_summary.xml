<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"

    >
        <TextView
            android:gravity="center_horizontal"
            android:id = "@+id/tv_class_room_summary"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "0.5"
            android:background = "@drawable/cell_shape"
            android:ellipsize = "end"
            android:padding = "5dp"            android:textSize="16sp"

            android:text = "lớp"
            android:singleLine = "true" />

        <TextView
            android:gravity="center_horizontal"
            android:id = "@+id/tv_ne_nep"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:background = "@drawable/cell_shape"
            android:ellipsize = "end"
            android:textSize="16sp"

            android:padding = "5dp"
            android:text = "nề nếp"
            android:singleLine = "true" />

        <TextView
            android:gravity="center_horizontal"
            android:id = "@+id/tv_diem_cong"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:background = "@drawable/cell_shape"
            android:ellipsize = "end"
            android:padding = "5dp"            android:textSize="16sp"

            android:text = "Điểm cộng"
            android:singleLine = "true" />

        <TextView
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:id = "@+id/tv_tong_diem"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:background = "@drawable/cell_shape"
            android:ellipsize = "end"
            android:text="Tổng"
            android:padding = "5dp"
            android:singleLine = "true" />
        <TextView
            android:gravity="center_horizontal"
            android:id = "@+id/tv_xep_loai"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:background = "@drawable/cell_shape"
            android:ellipsize = "end"            android:textSize="16sp"

            android:padding = "5dp"
            android:text = "Xếp loại"
            />
        <TextView
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:id = "@+id/tv_xep_hang"
            android:layout_width = "0dp"
            android:text="Hạng"

            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:background = "@drawable/cell_shape"
            android:ellipsize = "end"
            android:padding = "5dp"
            android:singleLine = "true" />
        <TextView
            android:textSize="18sp"
            android:textColor="#FF0000"
            android:gravity="center_horizontal"
            android:id = "@+id/tv_student_tuyen_duong"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "2.5"
            android:background = "@drawable/cell_shape"
            android:ellipsize = "end"
            android:padding = "5dp"
            android:singleLine = "true" />
</LinearLayout>