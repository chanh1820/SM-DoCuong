<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.quanlytrucnhat.AddReportActivity">

    <Button
        android:id="@+id/btn_back_add_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginRight="12dp"
        android:backgroundTint="@color/button"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        android:text="Quay lại"
        android:textSize="@dimen/text_size_default_min"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Học Sinh:"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Spinner
            android:background="@drawable/style_spinner"
            android:id="@+id/spn_choose_student"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:dropDownVerticalOffset="40dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại vi phạm:"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Spinner

            android:background="@drawable/style_spinner"
            android:id="@+id/spn_choose_rule_parent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:dropDownVerticalOffset="40dp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vi phạm:"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Spinner
            android:background="@drawable/style_spinner"
            android:id="@+id/spn_choose_rule_child"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:dropDownVerticalOffset="40dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imv_init_image"
        android:layout_width="155dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_camera_alt_24" />

    <Button
        android:id="@+id/btn_save_report"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Lưu lại"
        android:textSize="14sp" />
</LinearLayout>